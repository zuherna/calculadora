root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{css|scss|sass}]
indent_size = 2

[*.{csv,tsv}]
indent_style = tab
indent_size = 4

[*.js]
indent_size = 2

[*.json]
indent_size = 2

[*.php]
indent_size = 4

[*.rb]
indent_size = 2

[*.twig]
indent_size = 2

[*.{yml|yaml}]
indent_size = 4
